<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".equationCubic">

    <TextView
        android:id="@+id/eq3title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="91dp"
        android:gravity="center"
        android:text="Fill out the form"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/e3x3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="98dp"
        android:gravity="center"
        android:text="x +"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/e3f3"
        app:layout_constraintTop_toBottomOf="@+id/eq3title" />

    <EditText
        android:id="@+id/e3f1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="238dp"
        android:ems="10"
        android:textSize="15dp"
        android:inputType="numberSigned|number|numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/e3f2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="98dp"
        android:ems="10"
        android:textSize="15dp"
        android:inputType="numberSigned|number|numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/e3x1"
        app:layout_constraintTop_toBottomOf="@+id/eq3title" />

    <EditText
        android:id="@+id/e3f3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="98dp"
        android:ems="10"
        android:textSize="15dp"
        android:inputType="numberSigned|number|numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/e3x2"
        app:layout_constraintTop_toBottomOf="@+id/eq3title" />

    <TextView
        android:id="@+id/e3x1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="98dp"
        android:gravity="center"
        android:text="x^3 +"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/e3f1"
        app:layout_constraintTop_toBottomOf="@+id/eq3title" />

    <TextView
        android:id="@+id/e3x2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="98dp"
        android:gravity="center"
        android:text="x^2 +"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/e3f2"
        app:layout_constraintTop_toBottomOf="@+id/eq3title" />

    <TextView
        android:id="@+id/e3x4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="98dp"
        android:gravity="center"
        android:text="="
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/e3f4"
        app:layout_constraintTop_toBottomOf="@+id/eq3title" />

    <EditText
        android:id="@+id/e3r"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="238dp"
        android:layout_marginEnd="42dp"
        android:ems="10"
        android:textSize="15dp"
        android:inputType="numberSigned|number|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/e3x4"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/e3f4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="98dp"
        android:ems="10"
        android:textSize="15dp"
        android:inputType="numberSigned|number|numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/e3x3"
        app:layout_constraintTop_toBottomOf="@+id/eq3title" />

    <Button
        android:id="@+id/e3ToE"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginBottom="110dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/eq3Calculate"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="110dp"
        android:text="Calculate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/e3ToE" />

</androidx.constraintlayout.widget.ConstraintLayout>