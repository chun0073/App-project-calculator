<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".equationQuartic">

    <Button
        android:id="@+id/eq4Calculate"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="110dp"
        android:text="Calculate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/e4ToE" />

    <Button
        android:id="@+id/e4ToE"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="110dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/eq4title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="91dp"
        android:gravity="center"
        android:text="Fill out the form"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/e4f5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberSigned|numberDecimal"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/e4x4"
        app:layout_constraintTop_toBottomOf="@+id/e4x2" />

    <TextView
        android:id="@+id/e4x4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:text="X +"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/e4f4"
        app:layout_constraintTop_toBottomOf="@+id/e4x1" />

    <EditText
        android:id="@+id/e4f4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberSigned|numberDecimal"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e4f1" />

    <TextView
        android:id="@+id/e4r1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:text=" = "
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/e4f5"
        app:layout_constraintTop_toBottomOf="@+id/e4x2" />

    <EditText
        android:id="@+id/e4r"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="97dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberSigned|numberDecimal"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/e4r1"
        app:layout_constraintTop_toBottomOf="@+id/e4f3" />

    <TextView
        android:id="@+id/e4x2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="69dp"
        android:gravity="center"
        android:text="X^3 +"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/e4f2"
        app:layout_constraintTop_toBottomOf="@+id/eq4title" />

    <EditText
        android:id="@+id/e4f1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="69dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberSigned|numberDecimal"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eq4title" />

    <TextView
        android:id="@+id/e4x1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="69dp"
        android:gravity="center"
        android:text="X^4 +"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/e4f1"
        app:layout_constraintTop_toBottomOf="@+id/eq4title" />

    <EditText
        android:id="@+id/e4f3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="69dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberSigned|numberDecimal"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/e4x2"
        app:layout_constraintTop_toBottomOf="@+id/eq4title" />

    <TextView
        android:id="@+id/e4x3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="78dp"
        android:gravity="center"
        android:text="X^2 +"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/e4f3"
        app:layout_constraintTop_toBottomOf="@+id/eq4title" />

    <EditText
        android:id="@+id/e4f2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="69dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberSigned|numberDecimal"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/e4x1"
        app:layout_constraintTop_toBottomOf="@+id/eq4title" />

</androidx.constraintlayout.widget.ConstraintLayout>