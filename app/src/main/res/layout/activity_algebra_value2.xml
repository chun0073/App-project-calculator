        android:layout_marginBottom="110dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/b2V1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/p21"
        app:layout_constraintTop_toBottomOf="@+id/title21" />

    <TextView
        android:id="@+id/p21"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="47dp"
        android:text="+"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/r1"
        app:layout_constraintTop_toBottomOf="@+id/title21" />

    <TextView
        android:id="@+id/b21"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="47dp"
        android:text="b"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/b2V1"
        app:layout_constraintTop_toBottomOf="@+id/title21" />

    <EditText
        android:id="@+id/b2V2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/p22"
        app:layout_constraintTop_toBottomOf="@+id/b2V1" />

    <TextView
        android:id="@+id/a22"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="a"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/a2V2"
        app:layout_constraintTop_toBottomOf="@+id/r1" />

    <EditText
        android:id="@+id/a2V2"
        android:layout_width="40dp"
        android:layout_height="40dp"
