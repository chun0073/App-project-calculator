<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".equationQuadratic">

    <TextView
        android:id="@+id/eq2title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="91dp"
        android:gravity="center"
        android:text="Fill out the form"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/eq2calculate"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="110dp"
        android:text="Calculate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/e2ToE" />

    <Button
        android:id="@+id/e2ToE"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="110dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/x22"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="128dp"
        android:gravity="center"
        android:text="X +"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/e2f2"
        app:layout_constraintTop_toBottomOf="@+id/eq2title" />

    <EditText
        android:id="@+id/e2f2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:inputType="numberSigned|number|numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/x21"
        app:layout_constraintTop_toBottomOf="@+id/eq2title" />

    <EditText
        android:id="@+id/e2f1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:inputType="numberSigned|number|numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eq2title" />

    <EditText
        android:id="@+id/e2f3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:inputType="numberSigned|number|numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/x22"
        app:layout_constraintTop_toBottomOf="@+id/eq2title" />

    <TextView
        android:id="@+id/x21"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="128dp"
        android:gravity="center"
        android:text=" X^2 +"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/e2f1"
        app:layout_constraintTop_toBottomOf="@+id/eq2title" />

    <EditText
        android:id="@+id/e2r"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="57dp"
        android:ems="10"
        android:inputType="numberSigned|number|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/x23"
        app:layout_constraintTop_toBottomOf="@+id/eq2title" />

    <TextView
        android:id="@+id/x23"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="128dp"
        android:gravity="center"
        android:text="="
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/e2f3"
        app:layout_constraintTop_toBottomOf="@+id/eq2title" />

</androidx.constraintlayout.widget.ConstraintLayout>